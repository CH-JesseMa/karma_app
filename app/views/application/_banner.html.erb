<ul>
	<li><%= link_to "Home", root_path %></li>
	<% if logged_in? %>
		<li><%= link_to "Add a new post!", new_post_path %></li>
		<li>Welcome <%= current_user.user_name %> (<%= current_user.points %> points)</li>
	<% else %>
		<li><%= link_to new_user_path, "Register My Account" %></li>
		<li><%= link_to login_path, "Sign In" %></li>
	<% end %>
</ul>