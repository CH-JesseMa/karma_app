<ul id="banner">
	<li class="banner_element"><%= link_to "Home", root_path %></li>
	<% if logged_in? %>
		<li class="banner_element">Welcome <%= current_user.user_name %> (<%= current_user.points %> points)</li>
    <li class="banner_element"><%= link_to "Add a new post!", new_post_path %></li>
    <li class="banner_element"><%= link_to "Logout", logout_path %></li>
	<% else %>
		<li class="banner_element"><%= link_to new_user_path, "Register My Account" %></li>
		<li class="banner_element"><%= link_to "Sign In", login_path %></li>
	<% end %>
</ul>
