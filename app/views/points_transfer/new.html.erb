<h1>You have <%= current_user.points %> points to send!</h1>

<%= form_tag("/points_transfer", method: "POST") do %>
  <%= label_tag(:recipient, "User Name") %>
  <%= text_field_tag(:recipient) %>
  <%= label_tag(:amount, "Amount of Points") %>
  <%= number_field_tag(:amount) %>
  <%= submit_tag("Send Points!") %>
<% end %>
