<div class="posts small-4 large-6 columns">

  <h3 class="text-center" id="posts_header">Here's What's Happening In Your Community</h3>

  <button id="show_requests">Looking for Services</button>
  <button id="show_offers">Services Offered</button>

  <div id="offers">
    <h1>Offers</h1>

    <% @offers.each do |post| %>
      <div class="post">
        <%= link_to post.title, post_path(post) %>
        (<%= post.karma_value %> Karma Points)
      </div>
    <% end %>
  </div>

  <div id="requests">
    <h1>Requests</h1>

    <% @requests.each do |post| %>
      <div class="post">
        <%= link_to post.title, post_path(post) %>
        (<%= post.karma_value %> Karma Points)
      </div>
    <% end %>
  </div>

</div><!-- posts -->
