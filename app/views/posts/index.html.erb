<div id="posts_wrapper">
  <div class="posts">

    <h1>Here's What's Happening In Our Community</h1>

    <div id="offers">
      <% @offers.each do |post| %>
        <div class="post">
          <%= link_to image_tag post.image_url %>
          <%= link_to post.title, post_path(post) %>
          (<%= post.karma_value %> Karma Points)
          <%= button_to "Sounds awesome, sign me up!", new_transaction_path %>
          <% if current_user && (current_user.is_admin || current_user.id == post.user_id) %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= button_to 'Delete',  { action: "destroy", id: post.id }, method: :delete %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div id="requests">
      <% @requests.each do |post| %>
        <div class="post">
          <%= link_to image_tag post.image_url %>
          <%= link_to post.title, post_path(post) %>
          <%= post.karma_value %>
          <%= button_to "I want to help!", new_transaction_path %>
          <% if current_user && (current_user.is_admin || current_user.id == post.user_id) %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= button_to 'Delete',  { action: "destroy", id: post.id }, method: :delete %>
          <% end %>
        </div>
      <% end %>
    </div>

  </div><!-- posts -->
</div><!-- posts wrapper   -->





