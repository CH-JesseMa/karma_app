<div class="post_listing small-4 large-7 columns">

  <h3><%= @post.title %> (<%= @post.post_type %>)</h3>

  <div id="user_pic">
    <img src="<%= @post.image_url %>">
  </div><br>

  <p><%= @post.content %></p>

  <% if logged_in? && current_user != User.find_by(id: @post.user_id) %>
    <%= form_tag("/transactions", method: "post") do %>
      <%= hidden_field_tag(:post_id, params[:id]) %>
      <%= submit_tag "Sounds awesome, sign me up!", class: "button" %>
    <% end %>
  <% end %>

  <% if current_user && (current_user.id == @post.user_id) %>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= button_to 'Delete',  { action: "destroy", id: @post.id }, method: :delete, class: "button" %>
  <% end %>

</div><!-- post_listing -->

