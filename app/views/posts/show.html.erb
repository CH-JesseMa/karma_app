<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.content %>
</p>

<p>
  <%= @post.type %>
</p>
<!-- line 12 still needs to be fixed!!! -->


<!-- shows the picture -->
<p>
  <img src=<%= @post.image_url %>>
</p>


<h2>Responses</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Response</strong>
    <%= comment.text %>
  </p>
<% end %>


<h2>Respond to this Post:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :text %><br>
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>



<%= link_to 'Back to List', posts_path %> | <%= link_to 'Edit', edit_post_path(@post) %>

