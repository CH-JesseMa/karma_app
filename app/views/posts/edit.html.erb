<div id="post_listing_wrapper">
  <div class="post_listing">
    <h1>Editing Your Post</h1>

    <%= form_for :post, url: post_path(@post), method: :patch do |f| %>

      <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> kept
          this posting from being saved:</h2>
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
      <% end %>

      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>

      <p>
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    <% end %>

    <%= link_to 'Back', posts_path %>
  </div>  <!-- post listing -->
<div><!-- post listing wrapper -->

