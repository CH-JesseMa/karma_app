<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>

<%= radio_button_tag(:post, "I'm offering services") %>
<%= label_tag(:post, "I'm offering services") %>
<%= radio_button_tag(:post, "I'm requesting services") %>
<%= label_tag(:post, "I'm requesting services") %>

<%= link_to 'Back', posts_path %>

  <p>
    <%= f.submit %>
  </p>
<% end %>
