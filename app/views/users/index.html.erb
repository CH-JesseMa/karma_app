<div id="members_container">
  <div id="members_wrapper">
      <div class="members">
<h1>Our Members</h1>
          <% @users.each do |user| %>
          	<div class="user">
          		<div class="user-header">
                <ul>
  	          		<li><%= link_to image_tag user.image_url %></li>
  	          		<li><%= link_to user.user_name, user_path(user) %></li>
  	          		<li>(<%= user.points %> pts.)</li>
                  <li><%= user.location %></li>
                </ul>
	          	</div>
	          	<div class="user-body">
		          	<ul>
		          		<li><%= user.name %></li>
		          		<li><%= user.skills %></li>
		          		<% user.posts.each do |post| %>
		          			<li><%= link_to post.title, post_path(post) %></li>
                    <li>(<%= post.karma_value %> Karma Points)</li>
		          		<% end %>
		          	</ul>
		        </div>
	         </div>
          <% end %>
    </div><!-- members -->
  </div><!-- members wrapper   -->
</div><!-- members container   -->
