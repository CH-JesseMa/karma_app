<div id="profile_wrapper">
  <div class="profile">
      <p id="notice">
        <%= notice %>
      </p>

      <%= link_to image_tag @user.image_url %>
      <h1><%= @user.user_name %> - (<%= @user.points %> Points)</h1>
      <h2><%= @user.name %> - <%= @user.location %></h2>

      <p><%= @user.profile %></p>
      <p><%= @user.skills %></p>

      <!-- shows all the users postings on their profile page -->
      <% @user.posts.each do |post| %>
      <%= link_to post.title, post_path(post) %>,
      (<%= post.karma_value %> Karma Points) <br>
                  <% end %>

      <% if @user == current_user %>
      	<%= link_to 'Edit', edit_user_path(@user) %>
      <% end %>
      <%= link_to 'Back', users_path %>
      <%= link_to "Dashboard", root_path %>
  </div><!-- profile -->
</div><!-- profile wrapper -->


