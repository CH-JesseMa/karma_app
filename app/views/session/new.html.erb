<% flash.each do |msg| %>
  <%= content_tag :div, msg %>
<% end %>

<h1>Log Into Your Karma Account</h1>
<%= form_tag("/session", method: "post") do %>
  <%= label_tag(:email) %>
  <%= text_field_tag(:email) %>
  <%= label_tag(:password) %>
  <%= password_field_tag(:password) %>
  <%= submit_tag("Login") %>
<% end %>
