<div id="login_wrapper">
  <div class="login">

    <%= form_tag("/session", method: "post", class: "small-4 large-7 columns") do %>
    <h1 class="text-center">Login To Your Karma Account</h1>
      <%= label_tag(:email) %>
      <%= text_field_tag(:email) %>
      <%= label_tag(:password) %>
      <%= password_field_tag(:password) %>
      <%= submit_tag "Login", class: "button expand"%>
    <% end %>
  </div><!-- login   -->
</div><!-- login_wrapper -->
