<div id="login_wrapper">
  <div class="login">
    <h1>Login To Your Karma Account</h1>

    <% flash.each do |msg| %>
      <%= content_tag :div, msg %>
    <% end %>

    <%= form_tag("/session", method: "post") do %>
      <%= label_tag(:email) %>
      <%= text_field_tag(:email) %>
      <%= label_tag(:password) %>
      <%= password_field_tag(:password) %>
      <%= submit_tag("Login") %>
    <% end %>
  </div><!-- login   -->
</div><!-- login_wrapper -->
